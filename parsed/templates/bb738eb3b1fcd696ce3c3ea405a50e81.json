{"components/cart/shipping-calculator":"{{lang 'cart.shipping_calculator.title'}}\r\n{{#if shipping_cost}}\r\n  <span class=\"shipping-toggle\" data-shipping-calculator-toggle>{{shipping_cost.formatted}}</span>\r\n{{else}}\r\n  {{#if shipping_cost \"===\" 0}}\r\n    {{#if provider}}\r\n      <span class=\"shipping-toggle\" data-shipping-calculator-toggle>{{provider.description}}</span>\r\n    {{/if}}\r\n  {{else}}\r\n    <span class=\"shipping-toggle\" data-shipping-calculator-toggle>{{lang 'cart.shipping_calculator.add_info'}}</span>\r\n  {{/if}}\r\n{{/if}}\r\n\r\n<div class=\"shipping-calculator\" data-shipping-calculator>\r\n  <form class=\"form form-shipping\">\r\n    <div class=\"form-field field-country\">\r\n      <label class=\"form-label label-country\" for=\"shipping-country\">\r\n        <span class=\"form-label-text\">{{lang 'cart.shipping_calculator.select_a_country'}}</span>\r\n        <span class=\"form-field-control\">\r\n          <span class=\"form-select-wrapper\">\r\n            <select class=\"form-select\" id=\"shipping-country\" name=\"shipping-country\" data-field-type=\"Country\">\r\n              <option>{{lang 'cart.shipping_calculator.select_a_country'}}</option>\r\n              {{#each countries}}\r\n                <option value=\"{{id}}\" {{#if selected}}selected=\"selected\"{{/if}}>\r\n                  {{name}}\r\n                </option>\r\n              {{/each}}\r\n            </select>\r\n          </span>\r\n        </span>\r\n      </label>\r\n    </div>\r\n\r\n    <div class=\"form-field field-state-zip\">\r\n      <label class=\"form-label label-state\" for=\"shipping-state\">\r\n        <span class=\"form-label-text\">{{lang 'cart.shipping_calculator.select_a_state'}}</span>\r\n        <span class=\"form-field-control\">\r\n          <span class=\"form-select-wrapper\">\r\n            <select class=\"form-select\" id=\"shipping-state\" name=\"shipping-state\" data-field-type=\"State\">\r\n              <option>{{lang 'cart.shipping_calculator.select_a_state'}}</option>\r\n              {{#each states}}\r\n                <option value=\"{{id}}\" {{#if selected}}selected=\"selected\"{{/if}}>\r\n                  {{name}}\r\n                </option>\r\n              {{/each}}\r\n            </select>\r\n          </span>\r\n        </span>\r\n      </label>\r\n\r\n      <label class=\"form-label label-zip\" for=\"shipping-zip\">\r\n        <span class=\"form-label-text\">{{lang 'cart.shipping_calculator.zip_postal_code'}}</span>\r\n        <input class=\"form-input\" type=\"text\" id=\"shipping-zip\" name=\"shipping-zip\" value=\"{{selected_zip}}\" placeholder=\"{{lang 'cart.shipping_calculator.zip_postal_code'}}\">\r\n      </label>\r\n    </div>\r\n\r\n    <div class=\"form-actions\">\r\n      <button class=\"button\">{{lang 'cart.shipping_calculator.estimate_shipping'}}</button>\r\n    </div>\r\n  </form>\r\n\r\n  <div class=\"shipping-quotes\" data-shipping-quotes data-customer-group=\"{{customer_group_name}}\"></div>\r\n  <div class=\"shipping-errors\" data-shipping-errors></div>\r\n</div>\r\n"}
