{"components/cart-preview":"<div class=\"cart-preview\" id=\"cart-preview\" data-count=\"{{cart.quantity}}\">\n\n  {{#if cart.items}}\n    <div class=\"cart-preview-body\">\n\n      <ul class=\"cart-preview-list\">\n        {{#each cart.items}}\n          <li class=\"cart-preview-list-item\">\n\n            <a\n              class=\"cart-preview-list-item-remove\"\n              data-product-id=\"{{id}}\"\n              href=\"{{remove_url}}\"\n            >\n              &times;\n            </a>\n\n            {{#if image}}\n              <div class=\"cart-preview-list-item-image-wrap\">\n                <div class=\"cart-preview-list-item-image\">\n                  <a href=\"{{url}}\">\n                    <img src=\"{{getImage image 'thumbnail' default_image}}\"/>\n                  </a>\n                </div>\n              </div>\n            {{else}}\n              <div class=\"cart-preview-list-item-image-wrap\">\n                <div class=\"cart-preview-list-item-image\">\n                  <a href=\"{{url}}\">\n                    <img src=\"{{getImage image 'thumbnail' ../../theme_settings.default_image}}\"/>\n                  </a>\n                </div>\n              </div>\n            {{/if}}\n\n            <div class=\"cart-preview-list-item-details\">\n\n              <div class=\"cart-preview-list-item-brand\">\n                {{brand.name}}\n              </div>\n\n              <div class=\"cart-preview-list-item-name\">\n                <a href=\"{{url}}\" alt=\"{{name}}\">{{name}}</a>\n              </div>\n\n              {{#if options.length}}\n                <div class=\"cart-preview-list-options\">\n                  {{#each options}}\n                    {{name}}:&nbsp;{{value}}{{#unless @last}}, {{/unless}}\n                  {{/each}}\n                </div>\n              {{/if}}\n\n              <div class=\"cart-preview-list-item-price\">\n                <span class=\"{{#if price_discounted}}price-discounted{{/if}}\">\n                  {{price.formatted}}\n                </span>\n                {{#if price_discounted}}\n                  <span class=\"cart-item-discount\">\n                    {{price_discounted.formatted}}\n                  </span>\n                {{/if}}\n                <span class=\"multiplier\"> &times;</span> {{quantity}}\n              </div>\n            </div>\n\n          </li>\n        {{/each}}\n      </ul>\n\n    </div>\n\n    <div class=\"cart-preview-footer\">\n      {{#if cart.discount.value \"<\" 0}}\n        <div class=\"cart-preview-discount\">\n          <div class=\"cart-preview-total-price\">\n            {{lang 'cart.discount'}} {{cart.discount.formatted}}\n          </div>\n        </div>\n      {{/if}}\n      {{#if cart.taxes}}\n        <div class=\"cart-preview-taxes\">\n          {{#each cart.taxes}}\n          <div class=\"cart-preview-tax\">\n            <div class=\"cart-preview-total-price\">\n              {{name}} {{cost.formatted}}\n            </div>\n          </div>\n          {{/each}}\n        </div>\n      {{/if}}\n      <div class=\"cart-preview-pricing\">\n        <p class=\"cart-preview-total-price\">\n          {{lang 'header.total'}} &nbsp; {{{cart.grand_total.formatted}}}\n        </p>\n      </div>\n      <a href=\"{{urls.cart}}\" class=\"button secondary\">\n        <span>\n          {{lang 'header.view_cart'}}\n        </span>\n      </a>\n      <a href=\"{{urls.checkout.single_address}}\" class=\"button\">\n        {{lang 'cart_preview.checkout.title'}}\n      </a>\n      {{#if cart.show_multiple_address_shipping}}\n        <a class=\"checkout-multiple\" href=\"{{urls.checkout.multiple_address}}\">\n          {{lang 'cart.checkout_multiple'}}\n        </a>\n      {{/if}}\n    </div>\n\n  {{else}}\n    <p class=\"cart-preview-empty\">\n      {{lang 'cart_preview.checkout.empty_cart'}}\n    </p>\n  {{/if}}\n  <div id=\"cart-preview-overlay\" class=\"cart-preview-overlay\"></div>\n</div>\n"}