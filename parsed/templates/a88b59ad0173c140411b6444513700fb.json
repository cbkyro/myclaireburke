{"components/blog/blog-item":"<article class=\"blog-item\">\r\n\r\n  <a class=\"post-link\" href=\"{{url}}\">\r\n\r\n    <!-- Post header -->\r\n    <header class=\"post-header\">\r\n      <h1 class=\"post-title\">{{title}}</h1>\r\n    </header>\r\n\r\n    <!-- Post thumbnail -->\r\n    {{#if thumbnail}}\r\n      <figure class=\"post-featured-image-container\">\r\n        <img src=\"{{getImage thumbnail 'large'}}\" alt=\"{{thumbnail.alt}}\">\r\n      </figure>\r\n    {{/if}}\r\n  \r\n    <div class=\"post-details\">\r\n      <time class=\"post-timestamp\">{{date_published}}</time>\r\n      {{#if author}}\r\n        <span class=\"post-meta post-author\">{{lang 'blog.posted_by' author=author}}</span>\r\n      {{/if}}\r\n    </div>\r\n  </a>\r\n\r\n  <!-- Post content -->\r\n  <div class=\"blog-content rte\">\r\n    {{{summary}}}{{#if show_read_more}}...{{/if}}\r\n  </div>\r\n\r\n  <footer class=\"post-footer\">\r\n    {{#if show_read_more}}\r\n      <a class=\"read-more\" href=\"{{url}}\"><span>{{lang 'blog.read_more'}}</span></a>\r\n    {{/if}}\r\n    {{#if tags.length}}\r\n      <div class=\"post-tags\">\r\n        {{#each tags}}\r\n          <a href=\"{{url}}\" title=\"{{lang 'blog.tag_permalink' tag=name}}\">{{name}}</a> {{#unless @last}}&mdash;{{/unless}}\r\n        {{/each}}\r\n      </div>\r\n    {{/if}}\r\n  </footer>\r\n\r\n</article>\r\n"}
